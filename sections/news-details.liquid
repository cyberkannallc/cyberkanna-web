<style>
  .full-width{
    background:url({{ section.settings.bg-img | img_url: '2048x'}}) no-repeat;
    width: 100%;
    height: 400px;
    background-size: 100% 100%;  
    position:relative;
  }

  .tex-box {
      position: absolute;
      left: 50%;
      top: 50%;
      -webkit-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);
      text-align:center;
      color:#fff;
  }  

  .heading {
      font-size: 36px;
      font-weight: 900;
      margin-bottom:10px;
  }

  .about-kanna {
      font-size: 20px;
      font-weight: 500;
      line-height: 24.2px;
      margin-bottom: 30px;
  }

  a.contact-us-link {
      background: #fff;
      margin-top: 30px;
      /* display: block; */
      width: auto;
      padding: 10px 25px;
      text-decoration: none !important;
      font-size: 20px;
      font-weight: 700;
      color: #000;
      border-radius: 5px;
      border: 0;
  } 

  .section-template--22007642128676__main-padding{
      padding-bottom:80px;
  }
</style>
<div class="full-width">
  <div class="page-width">
    <div class="tex-box">
      <div class="heading"> {{ section.settings.heading }} </div>
      <div class="about-kanna"> {{ section.settings.about-kanna }} </div>
      <a href="{{ section.settings.link }}" class="contact-us-link"> {{ section.settings.link-txt }} </a>
    </div> 
  </div>
</div>  

{% schema %}
  {
    "name": "News Details",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg-img",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "about-kanna",
        "label": "about-kanna"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "link-txt",
        "label": "Link Text"
      }
    ],
    "presets": [
    {
      "name": "News Details",
      "category": "News Page"
    }
  ]
  }
{% endschema %}