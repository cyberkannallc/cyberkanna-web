<style>
  .full-width{
    background:url({{ section.settings.bg-img | img_url: '2048x'}}) no-repeat;
    width: 100%;
    height: 400px;
    background-size: 100% 100%;  
    position:relative;
  }

  .tex-box {
      color: #fff;
      position: absolute;
      top: 30%;
      max-width: 420px;
  }    

  .tex-box .heading {
      font-weight: 700;
      text-transform: uppercase;
      font-size: 55px;
  }   

  .about-kanna {
      font-weight: 900;
      font-size: 19px;
      line-height: 24.2px;
  }    

  @media(max-width:767px){
    .full-width {
          height: 330px;
          background-size:cover;
    }
  
    .tex-box {
        color: #fff;
        position: absolute;
        top: 30%;
        min-width: 85%;
        position: absolute;
        left: 50%;
        top: 50%;
        -webkit-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        text-align:center;
    }

    .tex-box .heading {
        font-weight: 700;
        text-transform: uppercase;
        font-size: 39px;
        line-height: 45px;
        margin-bottom: 15px;
    }

    .about-kanna {
        font-weight: 900;
        font-size: 16px;
        line-height: 20.2px;
    }
  
  

  }    
      
</style>
<div class="full-width">
  <div class="page-width">
    <div class="tex-box">
      <div class="heading"> {{ section.settings.heading }} </div>
      <div class="about-kanna"> {{ section.settings.about-kanna }} </div>
    </div> 
  </div>
</div>  

{% schema %}
  {
    "name": "About Us Details",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg-img",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "about-kanna",
        "label": "about-kanna"
      }
    ],
    "presets": [
    {
      "name": "About Us Details",
      "category": "About Us Page"
    }
  ]
  }
{% endschema %}