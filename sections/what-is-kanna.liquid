<style>
  .what-is-kanna{
      background:{{ section.settings.bg-color }};
      padding-top: 40px;
  }

  .introduction {
      text-align: center;
      max-width: 900px;
      margin: 0 auto;
  }

  .introduction .heading {
      color: #fff;
      font-size: 45px;
      font-weight: 900;
  }

  .desc {
    font-size: 15px;
    color: #fff;
    line-height: 19.2px;
    font-weight: 500;
  }

  .svg svg {
    width: 50px;
    height: 50px;
}

  .introductory-boxes {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      padding-top: 30px;
      padding-bottom: 30px;
  }

  .introductory-boxes .box {
      height: auto;
      border-radius: 10px;
      border: 5px solid #FF75C9;
      text-align: center;
      padding-top: 40px;
      padding: 20px 10px;
      color: #fff;
  }

  .introductory-boxes .box:hover {
      box-shadow: #ff75c9 -1px 1px 16px!important;
  }

  .introductory-boxes .box .heading {
      margin-top: 10px;
      margin-bottom: 5px;
      font-size: 23px;
      font-weight: 900;
  }

  .img-text {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      padding-bottom:80px;
      padding-top:40px;
  }

  .img img {
      max-width: 100%;
  }

  .txt .heading {
      font-size: 40px;
      font-weight: 900;
      color: #fff;
  }

  .txt .details {
      font-size: 15px;
      font-weight: 500;
      line-height: 19.2px;
      color: #fff;
  }

  .img {
    padding-top: 20%;
  }

  .what-is-kanna .page-width {
      padding: 0;
  }

  @media(max-width:1000px){
    .introductory-boxes {
        grid-template-columns: repeat(2, 1fr);
        padding-left: 15px;
        padding-right: 15px;
    }
  }


  @media(max-width:767px){
      .introduction .heading {
          color: #fff;
          font-size: 39px;
          font-weight: 900;
          line-height: 42px;
      }

      .introduction .desc {
          max-width: 85%;
          margin: 0 auto;
      }

      .img-text {
          grid-template-columns: repeat(1, 1fr);
          padding-top: 0;
          padding-left: 15px;
          padding-right: 15px;
         padding-bottom:20px;
      }

      .txt .heading {
          font-size: 29px;
          line-height: 33px;
      }

      .img {
            padding-top: 15px;
      }
  }
  
  @media(max-width:600px){
    .introductory-boxes {
        grid-template-columns: repeat(1, 1fr);
    }
  }


  
</style>
<div class="what-is-kanna">
  <div class="page-width">
    <div class="introduction">
      <div class="heading"> {{ section.settings.heading }} </div>
      <div class="desc"> {{ section.settings.description }} </div>
    </div>
    
    <div class="introductory-boxes">
      <div class="box">
        <div class="svg"> {{ section.settings.svg1 }} </div>
