    <div class="img-text">
        <div class="txt">
          <div class="heading"> {{ section.settings.about-kanna-heading }} </div>
          <div class="details"> {{ section.settings.about-kanna-details }} </div>
        </div> 
        <div class="img">
          <img src="{{ section.settings.about-kanna-img | img_url: '1000x'}}" alt="about-kanna">
        </div>  
    </div>  

    
  </div>  
</div>  

